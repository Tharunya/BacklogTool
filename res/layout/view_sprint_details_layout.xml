<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:stretchColumns="*" >

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/display_sprint_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="2"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date_text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/display_start_date"
                android:layout_height="wrap_content"
                android:ems="10" />
        </TableRow>

       <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date_text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/display_end_date"
                android:layout_height="wrap_content"
                android:ems="10" />
        </TableRow>

       <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="Description :"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/display_description"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_span="2"
                android:ems="10"
                android:inputType="text|textMultiLine" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/estimated_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Hours :"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/display_estimated_hours"
                android:layout_width="fill_parent"
                android:ems="10"
                android:singleLine="true" />
        </TableRow>
        
              <TableRow android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/actual_sprint_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Sprint Hours :"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/display_actual_sprint_hours"
                android:layout_width="fill_parent"
                android:ems="10"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>

</LinearLayout>